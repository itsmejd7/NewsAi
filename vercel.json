{
  "version": 2,
  "env": {
    "NPM_CONFIG_PRODUCTION": "false"
  },
  "build": {
    "env": {
      "NPM_CONFIG_PRODUCTION": "false",
      "NODE_ENV": "production"
    }
  },
  "installCommand": "npm ci --include=dev || npm install --include=dev",
  "buildCommand": "node ./node_modules/vite/bin/vite.js build",
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


